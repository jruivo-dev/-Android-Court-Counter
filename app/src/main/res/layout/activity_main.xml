<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Team A"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/leftScore_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="60sp" />


            <Button
                android:id="@+id/leftThreePoints_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:onClick="addThreePointsLeftTeam"
                android:text="+3 Points" />
            />

            <Button
                android:id="@+id/leftTwoPoints_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:onClick="addTwoPointsLeftTeam"
                android:text="+2 Points" />


            <Button
                android:id="@+id/leftFreeThrow_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:onClick="addFreeThrowLeftTeam"
                android:text="FREE THROW" />
            />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="330dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_orange_dark" />
        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Team B"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/rightScore_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="60sp" />


            <Button
                android:id="@+id/rightThreePoints_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:onClick="addThreePointsRightTeam"
                android:text="+3 Points" />

            <Button
                android:id="@+id/rightTwoPoints_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:onClick="addTwoPointsRightTeam"
                android:text="+2 Points" />


            <Button
                android:id="@+id/rightFreeThrow_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:onClick="addFreeThrowRightTeam"
                android:text="FREE THROW" />


        </LinearLayout>


    </LinearLayout>


    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="resetScores"
        android:text="Reset" />

</RelativeLayout>
